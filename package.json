{
	"name": "reverie",
	"version": "0.0.1",
	"license": "MIT",
	"scripts": {
		"dev": "svelte-kit dev",
		"build": "rm -rf ./build/* && svelte-kit build",
		"preview": "svelte-kit preview --port 3002",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"clear-emulator-ports": "lsof -t -i:9099 -i:8080 -i:3001 | xargs kill -9",
		"emulator": "yarn clear-emulator-ports && firebase emulators:start --only=firestore,auth --import=dev-data --export-on-exit",
		"smui:build": "smui-theme compile static/smui-dark.css -i src/theme/dark && smui-theme compile static/smui.css -i src/theme"
	},
	"devDependencies": {
		"@material/typography": "^13.0.0",
