		"d3-hierarchy": "^3.1.1",
		"d3-shape": "^3.1.0",
		"editorjs-html": "^3.4.2",
		"eslint": "^7.22.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-svelte3": "^3.2.1",
		"firebase": "9.0.1",
		"firebase-admin": "^9.10.0",
