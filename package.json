		"@smui/form-field": "^6.0.0-beta.13",
		"@smui/layout-grid": "^6.0.0-beta.13",
		"@smui/linear-progress": "^6.0.0-beta.15",
		"@smui/list": "^6.0.0-beta.13",
		"@smui/paper": "^6.0.0-beta.13",
		"@smui/radio": "^6.0.0-beta.14",
		"@smui/select": "^6.0.0-beta.13",
		"@smui/snackbar": "^6.0.0-beta.13",
		"@smui/tab": "^6.0.0-beta.16",
		"@smui/tab-bar": "^6.0.0-beta.16",
		"@smui/textfield": "^6.0.0-beta.13",
		"@smui/tooltip": "^6.0.0-beta.13",
		"@smui/top-app-bar": "^6.0.0-beta.13",
		"@sveltejs/adapter-auto": "^1.0.0-next.23",
		"@sveltejs/kit": "^1.0.0-next.138",
		"@types/cookie": "^0.4.1",
		"@types/jsonwebtoken": "^8.5.8",
